{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Launch FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["lightly_studio.api.app:app", "--reload", "--port", "8001"],
            "envFile": "${workspaceFolder}/lightly_studio/dataset/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "jinja": true
        },
        {
            "name": "Backend: Launch",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/e2e-tests/index_general.py",
            "python": "${workspaceFolder}/.venv/bin/python",
            "envFile": "${workspaceFolder}/lightly_studio/dataset/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Backend: Debug python file",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["${file}", "-vv"], // Verbose output for pytest
            "purpose": ["debug-test"]
        },
        {
            "name": "Backend: Debug Pytest file",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "python": "${workspaceFolder}/.venv/bin/python",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["${file}", "-vv"], // Verbose output for pytest
            "purpose": ["debug-test"]
        }
    ]
}
